
<img
    srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.mobile_image | image_url: width: 375 }} 375w,{%- endif -%}
    {%- if section.settings.image.width >= 550 -%}{{ section.settings.mobile_image | image_url: width: 550 }} 550w,{%- endif -%}
    {%- if section.settings.image.width >= 750 -%}{{ section.settings.mobile_image | image_url: width: 750 }} 750w,{%- endif -%}
    {%- if section.settings.image.width >= 1100 -%}{{ section.settings.mobile_image | image_url: width: 1100 }} 1100w,{%- endif -%}
    {%- if section.settings.image.width >= 1500 -%}{{ section.settings.mobile_image | image_url: width: 1500 }} 1500w,{%- endif -%}
    {%- if section.settings.image.width >= 1780 -%}{{ section.settings.mobile_image | image_url: width: 1780 }} 1780w,{%- endif -%}
    {%- if section.settings.image.width >= 2000 -%}{{ section.settings.mobile_image | image_url: width: 2000 }} 2000w,{%- endif -%}
    {%- if section.settings.image.width >= 3000 -%}{{ section.settings.mobile_image | image_url: width: 3000 }} 3000w,{%- endif -%}
    {%- if section.settings.image.width >= 3840 -%}{{ section.settings.mobile_image | image_url: width: 3840 }} 3840w,{%- endif -%}
    {{ section.settings.mobile_image | image_url }} {{ section.settings.image.width }}"
    sizes="100vw"
    src="{{ section.settings.mobile_image | image_url: width: 1500 }}"
    loading="lazy"
    alt="{{ section.settings.image.alt | escape }}"
    width="{{ section.settings.image.width }}"
    height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio | round }}"
    class="hide_on_desktop"
  >

{% schema %}
{
  "name": "Custom Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
      {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Image for mobile"
      }
  ],
}
{% endschema %}