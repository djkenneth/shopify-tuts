{% form 'cart', cart %}
  <h1>Cart</h1>

  {% if cart.empty? %}
    <p>Cart is empty!</p>
  {% else %}
    {% for line_item in cart.items %}
      <div>
        <img src="{{ line_item.image | image_url: width: 200 }}">
        <h2>{{ line_item.title }}</h2>
        <p>{{ line_item.final_line_price | money}}</p>
        <input name="updates[]" value="{{ line_item.quantity }}">
        <a href="{{ line_item.url_to_remove }}">Remove</a>
      </div>
    {% endfor %}
  {% endif %}
  <hr>

  <p>Total: {{ cart.total_price | money }}</p>

  <button type="submit" name="update">Update</button>

  <button type="submit" name="checkout">Checkout</button>
{% endform %}